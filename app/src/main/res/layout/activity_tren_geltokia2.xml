<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrenGeltokia2"
    android:background="@drawable/background_img_piedra">

    <ImageView
        android:id="@+id/fototren"
        android:layout_width="wrap_content"
        android:layout_height="360dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="87dp"
        android:src="@drawable/ic_bocadillo_trengeltokia" />

    <TextView
        android:id="@+id/textoBocata"
        android:layout_width="173dp"
        android:layout_height="154dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="183dp"
        android:text="@string/TrenGeltokia2"
        android:textColor="@color/negro"
        android:textSize="26dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="64dp" />

    <ImageView
        android:layout_width="301dp"
        android:layout_height="344dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp"
        android:layout_marginStart="18dp"
